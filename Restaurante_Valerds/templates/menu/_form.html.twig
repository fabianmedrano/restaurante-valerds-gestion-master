{% block stylesheets %}
  <link href="{{ asset('css/validaciones.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('Script/validaciones.js') }}"></script>
{% endblock %}

<div class="form-group">
  <label class="font-weight-bold">Categoría</label>
  {{form_widget(form.idCategoria, { 'attr': {'requerido': 'true', 'class': 'control form-control dropdown-toggle'} })}}
  <div class="div-error"></div>
</div>
<div class="form-group" style="display: flex; flex-direction: column;">
 <label class="font-weight-bold">Estado</label>
 <div style="display:flex; align-items:center;">
   <span>Inactivo</span>
   <label class="switch">
     {{form_widget(form.estado, { 'type': 'checkbox'})}}
     <span class="slider round"></span>
   </label>
   <span>Activo</span>
 </div>
</div>
<div class="form-group">
  <label class="font-weight-bold">Nombre</label>
  {{form_widget(form.nombre, { 'attr': {'valLetrasAcentosNumerosEspacioPuntuacionesSimbolos': 'true', 'requerido': 'true', 'class': 'control form-control', 'placeholder': 'Ingrese el nombre'} })}}
  <div class="div-error"></div>
</div>
  <div class="form-group">
  <label class="font-weight-bold">Descripción</label>
  {{form_widget(form.descripcion, { 'attr': {'valLetrasAcentosNumerosEspacioPuntuacionesSimbolos': 'true', 'requerido': 'true', 'class': 'control form-control', 'placeholder': 'Ingrese la descripción'} })}}
  <div class="div-error"></div>
</div>
<div class="form-group">
  <label class="font-weight-bold">Precio</label>
  {{form_widget(form.precio, { 'attr': {'valNumerosEnteros': 'true', 'requerido': 'true', 'class': 'control form-control', 'placeholder': 'Ingrese el precio'}, 'type': 'text' })}}
  <div class="div-error"></div>
</div>
<button id="enviar" type="button" class="btn btn-primary">{{modo|default('Registrar')}}</button>
