<h1 style="text-align:center;">Reporte de platillos</h1> 
<br>
<br>

{% block body %}

<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
  background-color: #123456;
  color: white;
}
</style>

<table>        
    <thead>
        <tr style="font-size:200%;">                
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Cantiad de Ventas</th>
            <th>Monto total</th>
           
        </tr>
    </thead>
    {% for movPlatillo in movPlatillos %}                
        <tr >
            <td style="font-size:150%;">
                {{ movPlatillo.nombre }}
            </td>                  
            <td style="font-size:150%;">
                {{ movPlatillo.descripcion }}
            </td >

            <td style="font-size:150%;">
                {{ movPlatillo.CantidadVentas }}
            </td>

            <td style="font-size:150%;">
                {{ movPlatillo.Montototal }}
            </td>

        </tr>
    {% endfor %}
</table>
{% endblock %}
